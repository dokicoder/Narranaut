{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "jsx": "react",
    "lib": ["ES2020", "dom"],
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/*.ts", "src/*.tsx", "types.d.ts"],
  "exclude": ["node_modules"]
}
